---
import Layout from '../layouts/Layout.astro';
---

<Layout>
<style>
/* styles.css */

body {
    margin: 0;
    font-family: 'Arial', sans-serif;
    margin-top: 8%;
    background-color: #1a1c2c;
    color: #e9e9e9;
    justify-content: center;
    align-items: center;

}

.dashboard {
    display: flex;
    margin: 8%;
    width: 80%;
    height: 100vh;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
    border-radius: 10px;
    overflow: hidden;
}

.sidebar {
    width: 250px;
    background-color: #232946;
    padding: 20px;
    box-shadow: 4px 0 15px rgba(0, 0, 0, 0.1);
}

.sidebar h2 {
    color: #00ffff;
    text-shadow: 0 0 5px rgba(0, 255, 255, 0.5);
    margin-bottom: 20px;
}

.sidebar nav ul {
    list-style: none;
    padding: 0;
}

.sidebar nav ul li {
    margin: 15px 0;
}

.sidebar nav ul li a {
    color: #e9e9e9;
    text-decoration: none;
    display: block;
    padding: 10px;
    border-radius: 5px;
    transition: background 0.3s;
}

.sidebar nav ul li a:hover,
.sidebar nav ul li.active a {
    background-color: #3a0ca3;
}

.main-content {
    flex-grow: 1;
    padding: 40px;
    background-color: #2b2d42;
}

.main-content header h1 {
    font-size: 2rem;
    color: #00ffff;
    text-shadow: 0 0 5px rgba(0, 255, 255, 0.5);
}

.dashboard-section {
    display: none;
    animation: fadeIn 0.5s ease;
}

.dashboard-section.active {
    display: block;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

</style>


<body>
    <div class="dashboard">
        <!-- Menú Lateral -->
        <aside class="sidebar">
            <h2>Recursos</h2>
            <nav>
                <ul>
                    <li class="active"><a href="#" data-section="overview">Resumen</a></li>
                    <li><a href="#" data-section="statistics">Estadísticas</a></li>
                    <li><a href="#" data-section="list">Lista de Recursos</a></li>
                </ul>
            </nav>
        </aside>

        <!-- Contenido Principal -->
        <main class="main-content">
            <!-- Cabecera -->
            <header>
                <h1>Dashboard de Recursos</h1>
                <p>Explora y administra tus recursos de manera eficiente con Astro.js y WordPress.</p>
            </header>

            <!-- Secciones -->
            <section id="overview" class="dashboard-section active">
                <h2>Resumen</h2>
                <p>Bienvenido al dashboard de recursos. Aquí puedes ver un resumen rápido de tus recursos.</p>
                <!-- Añade aquí elementos como tarjetas de resumen -->
            </section>

            <section id="statistics" class="dashboard-section">
                <h2>Estadísticas</h2>
                <p>Visualiza las estadísticas de tus recursos.</p>
                <!-- Añade aquí gráficos y estadísticas -->
            </section>

            <section id="list" class="dashboard-section">
                <h2>Lista de Recursos</h2>
                <p>Revisa y gestiona todos tus recursos de WordPress.</p>
                <!-- Lista de recursos, puede ser un grid de tarjetas -->
            </section>
        </main>
    </div>

    <script>

// script.js

document.addEventListener('DOMContentLoaded', () => {
    const navLinks = document.querySelectorAll('.sidebar nav ul li a');
    const sections = document.querySelectorAll('.dashboard-section');

    navLinks.forEach(link => {
        link.addEventListener('click', (e) => {
            e.preventDefault();
            // Remover la clase 'active' de todos los enlaces y secciones
            navLinks.forEach(nav => nav.parentElement.classList.remove('active'));
            sections.forEach(section => section.classList.remove('active'));

            // Agregar la clase 'active' al enlace y sección seleccionada
            link.parentElement.classList.add('active');
            const sectionId = link.getAttribute('data-section');
            document.getElementById(sectionId).classList.add('active');
        });
    });
});


    </script>
</body>
</html>

</Layout>