---
import Layout from '../layouts/Layout.astro';
---


<Layout title="Contacto">
  <style>

.contact-page {
  height: 90vh;
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
justify-content: center;
align-items: center;
align-self: center;
    padding: 40px 20px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center; /* Centramos las columnas */
    color: #e9e9e9;
    position: relative;
    overflow: hidden;

}

.card-container {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  gap: 20px;
}

.card {
  background: #c5c5c5a6;
  padding: 20px;
  border-radius: 15px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
  border: 4px solid;
  border-image-slice: 1;
  border-width: 4px;
  border-image-source: linear-gradient(45deg, #8a5fff, #0599369c);
  transition: transform 0.3s ease;
  width: 100%;
  max-width: 350px;
}

.card:hover {
  transform: translateY(-10px);
}

.card h2 {
  font-size: 1.5rem;
  margin-bottom: 20px;
  text-align: center;
}

.tech-icons, .social-icons {
  display: flex;
  justify-content: center;
  gap: 20px;
  flex-wrap: wrap;
}

.tech-item, .social-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-decoration: none;
  color: #0f0f0f;
}

.tech-item i, .social-item i {
  font-size: 2.5rem;
  margin-bottom: 10px;
  transition: transform 0.3s ease;
}

.tech-item p, .social-item p {
  margin: 0;
  font-size: 1rem;
}

.tech-item:hover i, .social-item:hover i {
  transform: scale(1.2);
}


  </style>
  <div class="contact-page">
    <div class="card-container">
      <div class="card">
        <h2>Tecnologías Utilizadas</h2>
        <div class="tech-icons">
          <div class="tech-item">
            <i class="fab fa-html5"></i>
            <p>HTML5</p>
          </div>
          <div class="tech-item">
            <i class="fab fa-css3-alt"></i>
            <p>CSS3</p>
          </div>
          <div class="tech-item">
            <i class="fab fa-js-square"></i>
            <p>JavaScript</p>
          </div>
          <div class="tech-item">
            <i class="fas fa-star"></i>
            <p>Astro</p>
          </div>
          <!-- Agregar más tecnologías si es necesario -->
        </div>
      </div>

      <div class="card">
        <h2>Conéctate Conmigo</h2>
        <div class="social-icons">
          <a href="https://github.com/tu-usuario" target="_blank" class="social-item">
            <i class="fab fa-github"></i>
            <p>GitHub</p>
          </a>
          <a href="https://linkedin.com/in/tu-usuario" target="_blank" class="social-item">
            <i class="fab fa-linkedin"></i>
            <p>LinkedIn</p>
          </a>
          <a href="https://twitter.com/tu-usuario" target="_blank" class="social-item">
            <i class="fab fa-twitter"></i>
            <p>Twitter</p>
          </a>
          <!-- Agregar más redes sociales si es necesario -->
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>
  <script>

document.addEventListener("DOMContentLoaded", () => {
    // Seleccionar todas las tarjetas
    const cards = document.querySelectorAll(".card");

    // Añadir animación con GSAP al hover
    cards.forEach(card => {
        card.addEventListener('mouseenter', () => {
            gsap.to(card, {
                duration: 0.5,
                y: -10,
                ease: "power3.out",
            });
        });

        card.addEventListener('mouseleave', () => {
            gsap.to(card, {
                duration: 0.5,
                y: 0,
                ease: "power3.out",
            });
        });
    });
});


  </script>

   <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</Layout>
