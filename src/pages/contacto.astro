---
import Layout from '../layouts/Layout.astro';
---


<body>
    <div class="contact-container">
        <h1 class="contact-title">Contáctame</h1>
        <form class="contact-form">
            <div class="form-group">
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="message">Mensaje:</label>
                <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            <button type="submit" class="contact-button">Enviar</button>
        </form>
    </div>
    <script>// contact.js

document.addEventListener('DOMContentLoaded', () => {
    // Animación de entrada para el contenedor del formulario
    gsap.to('.contact-container', {
        duration: 1,
        opacity: 1,
        y: 0,
        ease: 'power4.out'
    });

    // Animación secuencial para los elementos del formulario
    gsap.from('.contact-form .form-group', {
        duration: 0.8,
        y: 20,
        opacity: 0,
        stagger: 0.2,
        delay: 0.5,
        ease: 'power3.out'
    });

    // Animación para el botón
    gsap.from('.contact-button', {
        duration: 0.8,
        scale: 0.9,
        opacity: 0,
        delay: 1.2,
        ease: 'back.out(1.7)'
    });
});
</script>
</body>
</html>


<style>/* contact.css */

body {
    margin: 0;
    font-family: 'Arial', sans-serif;
    background-color: #1a1c2c;
    color: #e9e9e9;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    overflow: hidden;
}

.contact-container {
    text-align: center;
    width: 90%;
    max-width: 600px;
    padding: 40px;
    background-color: #232946;
    box-shadow: 0 0 20px rgba(0, 255, 255, 0.2);
    border-radius: 10px;
    opacity: 0; /* Para animación de entrada */
    transform: translateY(50px); /* Para animación de entrada */
}

.contact-title {
    font-size: 2.5rem;
    color: #00ffff;
    text-shadow: 0 0 5px rgba(0, 255, 255, 0.5);
    margin-bottom: 20px;
}

.contact-form .form-group {
    margin-bottom: 20px;
    text-align: left;
}

.contact-form label {
    display: block;
    margin-bottom: 5px;
}

.contact-form input,
.contact-form textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #3a0ca3;
    border-radius: 5px;
    background-color: #1a1c2c;
    color: #e9e9e9;
    font-size: 1rem;
    outline: none;
    box-shadow: 0 0 10px rgba(0, 255, 255, 0.1);
}

.contact-button {
    padding: 10px 20px;
    font-size: 1rem;
    color: #fff;
    background: linear-gradient(45deg, #ff0080, #ff79c6);
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: transform 0.3s;
    box-shadow: 0 0 15px rgba(255, 0, 128, 0.5), 0 0 30px rgba(255, 121, 198, 0.5);
}

.contact-button:hover {
    transform: scale(1.05);
    box-shadow: 0 0 20px rgba(255, 0, 128, 0.7), 0 0 40px rgba(255, 121, 198, 0.7);
}
</style>